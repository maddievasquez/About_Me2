<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#175676">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/educationButton"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:gravity="end"
        android:paddingTop="20dp"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_graduationcap"
        android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="top"
        android:scaleType="fitStart"
        android:src="@drawable/college" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/homeBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:drawableStart="@drawable/ic_home"
            android:textAllCaps="false"
            android:textColor="#F5F1ED"
            android:textSize="11sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <Button
            android:id="@+id/skillsBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/custom_button"
            android:drawableStart="@drawable/ic_skills"
            android:text="@string/skillsButton"
            android:textAllCaps="false"
            android:textColor="#F5F1ED"
            android:textSize="11sp"
            />
        <Button
            android:id="@+id/hobbiesBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_button"
            android:drawableStart="@drawable/ic_hobbies"
            android:text="@string/hobbiesButton"
            android:textAllCaps="false"
            android:textColor="#F5F1ED"
            android:textSize="11sp"
            />

        <Button
            android:id="@+id/achievementsBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingEnd="1dp"
            android:paddingStart="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_button"
            android:drawableStart="@drawable/ic_achievement"
            android:text="@string/achievementsButton"
            android:textAllCaps="false"
            android:textColor="#F5F1ED"
            android:textSize="11sp"
            />
    </LinearLayout>

</LinearLayout>